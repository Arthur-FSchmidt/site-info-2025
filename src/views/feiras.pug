extends layout 

block content 
    .container.py-3
        .row.justify-content-center.m-3
            .col.col-md-8.col-lg-6
                h1.p-1 Feiras
                p.p-1 Acompanhe os destaques das feiras e mostras científicas em que o curso de Informática marca presença, apresentando projetos inovadores desenvolvidos por nossos alunos como resultado de muita criatividade, pesquisa e dedicação.    
        .row.justify-content-center.m-3    
            .col.col-md-8.mb-1
                ul(role="tablist").nav.nav-tabs.justify-content-center
                    each lista_feiras, ano in feiras
                        if ano == 2015
                            li(role="presentation").nav-item
                                a(id= "2015-tab" data-bs-toggle="tab" data-bs-target="#2015" type="button" role="tab" aria-controls="2015" aria-selected="true").nav-link.active 2015
                        else
                            li(role="presentation").nav-item
                                a(id= ano + "-tab" data-bs-toggle="tab" data-bs-target="#"+ano type="button" role="tab" aria-controls= ano aria-selected="false").nav-link= ano

        .row
            .tab-content
                each lista_feiras, ano in feiras
                    if ano == 2015
                        div(role="tabpanel" aria-labelledby=ano+"-tab" tabindex="0" id=ano).tab-pane.fade.active.show.justify-content-center.g-4
                            .row.justify-content-center.g-4
                                each item in lista_feiras
                                    .col-12.col-md-6.col-lg-3
                                        .card.border-0.shadow.rounded-4.m-3.p-0
                                            img(src=item.imagem_path, alt="").w-100.rounded-top-4.card-img-top
                                            .card-body 
                                                h1.card-title.m-3= item.nome
                                                p.card-text.m-3= item.descricao
                    else
                        div(role="tabpanel" aria-labelledby=ano+"-tab" tabindex="0" id=ano).tab-pane.fade.justify-content-center.g-4
                            .row.justify-content-center.g-4
                                each item in lista_feiras
                                    .col-12.col-md-6.col-lg-3
                                        .card.border-0.shadow.rounded-4.m-3.p-0
                                            img(src=item.imagem_path, alt="").w-100.rounded-top-4.card-img-top
                                            .card-body 
                                                h1.card-title.m-3= item.nome
                                                p.card-text.m-3= item.descricao
